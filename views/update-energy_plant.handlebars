<h1>Update {{energy_plant.energy_plant_name}}:</h1>
<form id="update-energy_plant" action="/energy_plants" method="post">
	 <div class="form-group">
        name <input type="text" value="{{energy_plant.energy_plant_name}}" name="energy_plant_name"><br>
    </div>
		<div class="form-group">
				associated company
				<select name="energy_company_id">
			{{#each energy_companys}}
					 <option value="{{energy_company_id}}">{{energy_company_name}}</option>
			 {{/each}}
		</select><br>
		</div>
	<div class="form-group">
    source
	<select name="energy_source_id" id="energy_source-selector">
		<option value="empty"></option>
        {{#each energy_sources}}
            <option value="{{energy_source_id}}">{{energy_source_name}}</option>
        {{/each}}
    </select><br>
    </div>
	 <div class="form-group">
        power output [MW]<input type="number" name="power_output" value="{{energy_plant.power_output}}" min="0"><br>
    </div>
	 <div class="form-group">
        square feet<input type="number" name="p_square_feet" value="{{energy_plant.p_square_feet}}" min="0"><br>
    </div>
	<div class="form-group">
        transmission
		<select name="transmission" value="{{energy_plant.transmission}}" form="update-energy_plant">
		  <option value="overhead">overhead</option>
		  <option value="underground">underground</option>
		  <option value="subtransmission">subtransmission</option>
		</select><br>
    </div>
	<div class="form-group">
        maintenance cost [per year]<input type="number" name="maintenance_cost" value="{{energy_plant.maintenance_cost}}" min="0"><br>
    </div>
    <div class="form-group">
        energy price [per kwh]<input type="number" name="energy_price" value="{{energy_plant.energy_price}}" min="0"><br>
    </div>
</form>
<button class="btn btn-primary" onclick="updateEnergyPlant({{energy_plant.energy_plant_id}})">Update</button>
