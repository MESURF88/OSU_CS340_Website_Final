<h1>Update {{building.building_name}}:</h1>
<form id="update-building" action="/buildings" method="post">
	 <div class="form-group">
        name <input type="text" name="building_name" value="{{building.building_name}}"><br>
    </div>
		<div class="form-group">
			energy company
		<select name="energy_company_id">
					{{#each energy_companys}}
							<option value="{{energy_company_id}}">{{energy_company_name}}</option>
					{{/each}}
			</select><br>
			</div>
			<div class="form-group">
					square feet <input type="number" name="b_square_feet" value="{{building.b_square_feet}}" min="0"><br>
			</div>
			<div class="form-group">
					build date <input type="date" name="build_date" value="{{building.build_date}}"><br>
			</div>
    <div class="form-group">
        function
		<select name="_function" form="update-building" value="{{building._function}}">
		  <option value="industrial">industrial</option>
		  <option value="residential">residential</option>
		  <option value="commercial">commercial</option>
		</select><br>
    </div>
    <div class="form-group">
        energy consumption [kwh per year] <input type="number" name="energy_consumption" value="{{building.energy_consumption}}" min="0"><br>
    </div>
</form>
<button class="btn btn-primary" onclick="updateBuilding({{building.building_id}})">Update</button>
