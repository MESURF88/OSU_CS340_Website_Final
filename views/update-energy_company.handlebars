<h1>Update {{energy_company.energy_company_name}}:</h1>
<form id="update-energy_company" action="/energy_companys" method="post">
	 <div class="form-group">
        name <input type="text" name="energy_company_name" value="{{energy_company.energy_company_name}}"><br>
    </div>
		<div class="form-group">
				associated plant
				<select name="energy_plant_id">
			{{#each energy_plants}}
					 <option value="{{energy_plant_id}}">{{energy_plant_name}}</option>
			 {{/each}}
		</select><br>
		</div>
    <div class="form-group">
        net worth<input type="number" name="net_worth" value="{{energy_company.net_worth}}" min="0"><br>
    </div>
</form>
<button class="btn btn-primary" onclick="updateEnergyCompany({{energy_company.energy_company_id}})">Update</button>
